BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 24
            size_hint_x: 4
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: miles_up
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                id: miles_down
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, -1)
    Label:
        id: output_kilometres
        font_size: 24
        color: (1, 1, 0, 1)
